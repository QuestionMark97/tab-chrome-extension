{
  "name": "Tab Cleanup",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "declarativeContent",
    "http://*/",
    "https://*/"
  ],
  "description": "Manages tabs",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "commands": {
    "close-tab": {
      "suggested_key": { "default": "Alt+Shift+P" },
      "description": "Close second tab"
    }
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
        "16": "images/logo16.png",
        "32": "images/logo32.png",
        "48": "images/logo192.png",
        "128": "images/logo192.png"
      }
  },
  "icons": {
      "16": "images/logo16.png",
      "32": "images/logo32.png",
      "48": "images/logo192.png",
      "128": "images/logo192.png"
    },
  "manifest_version": 2
}
